<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="200dp"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0"

        >
         <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/linearLayoutSidebar"
            android:layout_weight="0.2"
             android:gravity="center"
             android:orientation="vertical"
            android:layout_height="match_parent" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="A"
                android:textColor="#fff"
                android:id="@+id/sidebarText"
                android:fontFamily="sans-serif-thin"
                android:textSize="48sp"

                android:gravity="center"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:padding="10dp">
            <TextView
                android:id="@+id/workshop_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Android Code Camp"
                android:textSize="28sp"

                android:fontFamily="sans-serif-thin"
                android:layout_weight="0.3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="left"
                     android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_date_range_black_24dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:gravity="center"
                        android:text="24-6 to 6-8"
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/workshop_date"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                   android:gravity="right"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_query_builder_black_24dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="23H4M to 4H6M"
                        android:gravity="center"
                        android:padding="2dp"
                        android:fontFamily="sans-serif-condensed"

                        android:id="@+id/workshop_time"/>
                </LinearLayout>
            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLOCK "
                    android:layout_weight="0.7"
                    style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                    android:layout_gravity="right"
                    android:id="@+id/workshop_block"/>
                <Button
                    android:id="@+id/message_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_gravity="right"
                    android:textSize="15sp"

                   android:layout_weight="0.3"
                    style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                    android:text="DETAILS" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>